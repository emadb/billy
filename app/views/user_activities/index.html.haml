%h1
  Activity for %user%
%fieldset
  %legend &nbsp;
  %form.well.form-inline
    Month:
    = select_month(@filter_date, :field_name => 'month', :class => 'input-small')
    Year
    = select_year(@filter_date, :field_name => 'year', :class => 'input-small')
    User
    = select_tag('user', '<option value="1">uno</option><option value="2">due</option>'.html_safe, :class => 'input-small')
    %button.btn{:type => 'submit'} apply

  %form.well.form-inline{"data-bind" => "submit: addActivity"}
    Type
    = select_tag('type', '<option value="1">uno</option><option value="2">due</option>'.html_safe, :class => 'input-small', "data-bind" => "value: type")
    Date
    = text_field_tag 'date', '', :class => 'date input-small', :data => {:bind => "value: date"}
    Hours
    = text_field_tag 'hours', '', :class => 'input-small', :data => {:bind => "value: hours"}
    Description
    = text_field_tag :description, '', :data => {:bind => "value: description"}
    %button.btn{:type => 'submit'} add


%table.table.table-striped
  %thead
    %tr
      %td Type
      %td Data
      %td Hours
      %td Description
  %tbody{"data-bind" => "{foreach: activities}"}
    %tr
      %td{"data-bind"=>"{text:type}"}
      %td{"data-bind"=>"{text:date}"}
      %td{"data-bind"=>"{text:hours}"}
      %td{"data-bind"=>"{text:description}"}        

  = content_for :side_bar do
    .well.sidebar-nav
      = link_to 'nuova fattura', new_inbound_invoice_path , {:class => 'btn btn-primary'}
      %ul.totals
        %li Total hours
        %li yesterday
        
        
        