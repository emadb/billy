= form_for @invoice, {:html => {:class => 'form-horizontal'}} do |f|
  = f.hidden_field :status
  .row
    .col-md-5
      .field.control-group
        = f.label :number, :class => 'control-label'
        .controls
          = f.text_field :number, :class => 'input-small'
      .field.control-group
        = f.label :customer, :class => 'control-label'
        .controls
          = select_tag "invoice[customer_id]", options_from_collection_for_select(@customers, "id", "name", @invoice.customer.id)
      .field.control-group
        = f.label :due_date, :class => 'control-label'
        .controls
          = f.text_field :due_date, :class => 'isdate', :value => @invoice.string_due_date
      .field.control-group
        = f.label :notes, :class => 'control-label'
        .controls
          = f.text_area :notes, :cols => 20, :rows => 3
      
    .col-md-5
      .field.control-group
        = f.label :date, :class => 'control-label'
        .controls
          = f.text_field :date, :class => 'isdate', :value => @invoice.string_date
      .field.control-group
        = f.label :is_payed, :class => 'control-label'
        .controls
          = f.check_box :is_payed    
      .field.control-group
        = f.label :has_tax, :class => 'control-label'
        .controls
          = f.check_box :has_tax
      .field.control-group
        = f.label :status, :class => 'control-label'
        .controls
          = f.select :status, {:temporary => 1, :active => 2}
  .row
    .col-md-12
      %fieldset
        %legend 
          %a.new-item.btn.btn-primary{:href=>'#'} 
            %i{:class => 'icon-plus icon-white'}
            nuova riga 
        %table.items
          %tr
            %td descrizione
            %td importo
            %td 
          = f.fields_for :invoice_items do |i|
            %tr
              %td
                = i.text_field :description, {:class => 'input-xxlarge'}
              %td
                = i.text_field :amount, {:class => 'amount input-small'}
              %td
                = i.hidden_field :_destroy
                %a{:href => '#', :class => 'btn-mini btn remove-item'}
                  %i{:class => 'icon-trash'}
