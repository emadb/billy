.row
  .col-lg-12
    %h2 Elenco fatture

.row
  .col-lg-9        
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th Numero
          %th Data
          %th Cliente
          %th.right Imponibile
          %th Pagata
          %th Stato
          %th 
      %tbody
        -@invoices.each do |i|
          %tr{:class => ("text-danger" if i.is_in_late?)}
            %td 
              = i.number
            %td
              = i.date.strftime('%d-%m-%Y') unless i.date.nil?
            %td
              = i.customer.name
            %td
              %span.pull-right
                = number_to_currency(i.taxable_income)
                %br
                %small.text-muted
                  = number_to_currency(i.total)
            %td
              -if i.is_payed
                %span.label.label-success si
              - else
                %span.label.label-warning no
            %td 
              = status_helper(i.status)
            %td
              .btn-group
                %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown"}
                  Azioni 
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => edit_invoice_path(i)}
                      %i.icon-edit
                      Modifica
                  %li
                    %a{:href => invoice_path(i)} 
                      %i.icon-file-alt
                      Visualizza
                  %li
                    %a{:href => invoice_drop_box_path(i), :class=> 'drop-box'} 
                      %i.icon-dropbox
                      Invia a dropbox
                  - if i.status == Invoice.temporary
                    %li
                      %a{:href => invoice_activate_path(i)}
                        %i.icon-thumbs-up-alt 
                        Emetti
                  %li.divider
                  %li
                    %a{:href=> invoice_path(i), :class => 'delete' } 
                      %i.icon-trash.text-error
                      Elimina
                            
  .col-lg-3
    .row.sidebar-row
      = link_to 'Nuova fattura', new_invoice_path , {:class => 'btn btn-primary btn-block'}
    .row.sidebar-row
      .panel.panel-default
        .panel-heading
          %h3.panel-title.text-center Riepilogo
        .panel-body
          %ul.info-panel
            %li.header Imponibile
            %li.amount
              = number_to_currency(@totals.taxable_income)
            %li.header IVA
            %li.amount
              = number_to_currency(@totals.tax)
            %li.header Totale
            %li.amount
              = number_to_currency(@totals.total)
          