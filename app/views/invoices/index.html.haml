%h1
  Fatture
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Numero
      %th Data
      %th Cliente
      %th.right Imponibile
      %th.right Iva
      %th.right Totale
      %th Pagata
      %th Stato
      %th 
      %th
  %tbody
    -@invoices.each do |i|
      %tr
        %td 
          = i.number
        %td 
          = i.date.strftime('%d-%m-%Y') unless i.date.nil?
          - if i.is_in_late?
            %span.badge.badge-important !
        %td
          = i.customer.name
        %td.right
          = number_to_currency(i.taxable_income)
        %td.right
          = number_to_currency(i.tax)
        %td.right
          = number_to_currency(i.total)
        %td
          -if i.is_payed
            %span.label.label-success si
          - else
            %span.label.label-warning no
        %td 
          = status_helper(i.status)
          - if i.status == Invoice.temporary
            %a{:href => invoice_activate_path(i)}
              %i.icon-chevron-sign-right.icon-large
        %td
          %a{:href => edit_invoice_path(i)}
            %i.icon-edit.icon-large
          %a{:href => invoice_path(i)} 
            %i.icon-file-alt.icon-large
          %a{:href => invoice_drop_box_path(i), :class=> 'drop-box'} 
            %i.icon-dropbox.icon-large
        %td
          %a{:href=> invoice_path(i), :class => 'delete' } 
            %i.icon-trash.icon-large.text-error

  = content_for :side_bar do
    .well.sidebar-nav
      = link_to 'nuova fattura', new_invoice_path , {:class => 'btn btn-primary'}
      %hr
      %ul.totals.info-panel
        %li Imponibile
        %li.taxable-income.amount
          = number_to_currency(@totals.taxable_income)
        %li IVA
        %li.tax.amount
          = number_to_currency(@totals.tax)
        %li Totale
        %li.total.amount
          = number_to_currency(@totals.total)
        