.row
  = form_for @job_order, {:html => {:class => 'form-horizontal'}} do |f|
    .col-md-12
      .field.control-group
        = f.label :code, :class => 'control-label'
        .controls
          = f.text_field :code, :class => 'input-medium'
      .field.control-group
        = f.label :customer, :class => 'control-label'
        .controls
          = select_tag "job_order[customer_id]", options_from_collection_for_select(@customers, "id", "name", @job_order.customer.id)
      .field.control-group
        = f.label :hourly_rate, :class => 'control-label'
        .controls
          = f.text_field :hourly_rate, :class => 'input-medium'
      .field.control-group
        = f.label :price, :class => 'control-label'
        .controls
          = f.text_field :price, :class => 'input-medium'
      .field.control-group
        = f.label :notes, :class => 'control-label'
        .controls
          = f.text_area :notes, :class => 'input-medium', rows: 3
        .field.control-group
          = f.label :archived, :class => 'control-label'
          .controls
            = f.check_box :archived, :class => 'input-medium'
    %fieldset
      %legend 
        Attività
        %a#new-activity.new-item.btn.btn-primary{:href=>'#'} 
          %i{:class => 'icon-plus icon-white'} 
          nuova attività
      %table.activities.table
        %thead
          %tr
            %td descrizione
            %td ore stimate
            %td attiva
            %td 
        %tbody
          = f.fields_for :activities do |a|
            %tr
              %td
                = a.text_field :description, {:class => 'input-xxlarge'}
              %td
                = a.text_field :estimated_hours, {:class => 'amount input-small'}
              %td
                = a.check_box :active, {:class => 'input-medium'}
              %td
                %a#remove-activity{:href => '#', :class => 'btn'}
                  %i{:class => 'icon-trash icon-large'}
                = a.hidden_field :_destroy
