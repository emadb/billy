%h1
  Commesse
%fieldset
  %legend &nbsp;
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Codice
      %th Cliente
      %th Tariffa oraria
      %th Stato (ore fatte/totale)
      %th
      %th Guadagno (Stima - Speso)
      %th
      %th 
  %tbody
    -@job_orders.each do |job|
      %tr
        %td 
          = link_to job.code, edit_job_order_path(job)
        %td 
          = job.customer.name
        %td.right
          = job.hourly_rate
        %td.right
          = "#{job.total_executed_hours}/#{job.total_estimated_hours}"
        %td
          - if job.warning?
            %span.badge.badge-important !
        %td.right
          = job_order_cost_status_helper(job)
        %td
          %a{:href=> job_order_activities_path(job)}
            %i.icon-list.icon-large
        %td
          %a{:href=> job_order_path(job), :class => 'delete' } 
            %i.icon-trash.icon-large
        

  = content_for :side_bar do
    .well.sidebar-nav
      
      %ul.info-panel
        %li
          = link_to 'nuova commessa', new_job_order_path , {:class => 'btn btn-primary'}
        %li
          %a{href: job_orders_path + "/?archived=yes", class: 'archived-job-order, btn'}
            commesse archiviate
      %hr
      %ul.totals.info-panel
        %li
          Commesse attive
        %li
          = @job_orders.where(:archived => false).count
        %li
          Totale ore stimate
        %li
          = @job_orders.sum(&:total_estimated_hours)
        %li
          Totale ore effettuate
        %li
          = @job_orders.sum(&:total_executed_hours)